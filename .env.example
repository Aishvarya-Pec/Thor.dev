# File Storage (optional cloud sync)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="thor-dev-projects"

# Development
NODE_ENV="development"
PORT=3000